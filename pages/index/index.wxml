  <view class="title" wx:if="{{zanNum>0}}">已有{{zanNum}}人赞过</view>
  <view class="friends">
    <view class="face" wx:for="{{zanLog}}" wx:key="user"><image src="{{item.face}}" /></view>
  </view>
  <view class="btn_zone">
    <view class="zan fl">
      <button type="primary" bindtap='zan'>点赞</button>  
    </view>
    <view class="share fr">
      <button type="default" open-type="share">分享</button>  
    </view>
  </view>
  <view class="address">
    {{mainInfo.hotel}}
  </view>
  <view class="address">
    {{mainInfo.address}}
  </view>
  <view class="map">
    <map id="map" longitude="{{mainInfo.lng}}" latitude="{{mainInfo.lat}}" scale="18" controls="{{controls}}" markers="{{markers}}" bindmarkertap="markertap" show-location style="width: 100%; height: 300px;"></map>
  </view>
  <view class="flower">
    <image src="/images/flowers-big.png" width="100%"/>
  </view>
