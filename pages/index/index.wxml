<view class="container">
  <view class="head">
    <image src="/images/head_4.jpg"/>
  </view>
  <!--轮播图-->
  <view class="swiper">
    <swiper indicator-dots="false" autoplay="false" interval="5000" duration="1000">
        <swiper-item wx:for="{{slideList}}" wx:key="slide" wx:id="id" wx:if="{{item.image}}">
            <image src="{{item.image}}" class="slide-image" mode="aspectFill"/>
        </swiper-item>
    </swiper>
  </view>
  <view class="date">
    <view>2017年12月12日</view>
    <view>农历 腊月 初十</view>
  </view>
  <view class="name">
    <span class="fl">梁山伯</span>
    <span class="fr">朱丽叶</span>  
  </view>
  <view class="title">已有342人赞过</view>
  <view class="friends">
    <view class="face"><image src="/images/face.png" /></view>
    <view class="face"><image src="/images/face.png" /></view>
    <view class="face"><image src="/images/face.png" /></view>
    <view class="face"><image src="/images/face.png" /></view>
